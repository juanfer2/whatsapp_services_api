{
  "name": "ddd-template-typescript",
  "version": "1.0.0",
  "description": "this project is a template for typescript",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon ./src/shared/index.ts",
    "type-check": "tsc",
    "prettier": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" --config ./.prettierrc",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "npx tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "reinstall:node_modules": "rm -r dist && npm i; exit 0",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-watch": "jest --watch",
    "prepare": "husky install"
  },
  "author": "juanfer",
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.2",
    "@types/qr-image": "^3.2.5",
    "@types/uuid": "^8.3.4",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-transform-require-context": "^0.1.1",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.1",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.14.2",
    "http-status": "^1.5.3",
    "inversify": "^6.0.1",
    "inversify-inject-decorators": "^3.1.0",
    "mongodb": "^4.11.0",
    "qr-image": "^3.2.0",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typedi": "^0.10.0",
    "uuid": "^9.0.0",
    "whatsapp-web.js": "^1.18.2",
    "winston": "^3.8.2"
  }
}
